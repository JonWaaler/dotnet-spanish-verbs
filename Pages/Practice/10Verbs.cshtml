@page
@model spanish_verbs.Pages.Practice._10VerbsModel
@{
    ViewData["Title"] = "10Verbs";
    Layout = "~/PAges/Shared/_QuizLayout.cshtml";
    Random r = new Random();
    int num = r.Next(0, 2);
}

<section>
    @*Quiz Progress bar*@
    @if(Model.QuestionsAnswered < 10)
    {
        <div class="">
            <div class="flex-container align-items-center justify-content-between m-5">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </div>
                <div class="progress shadow-sm" style="height: 20px; max-width: 90vw; width: 90vw">
                    <div class="progress-bar bg-info" role="progressbar" style="width: @((Model.QuestionsAnswered * 10)+10)%;" aria-valuenow="@Model.QuestionsAnswered" aria-valuemin="0" aria-valuemax="10">
                        @((Model.QuestionsAnswered * 10) + 10)%
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="border-bottom">
    <h1 class="my-3 display-6 text-center ">Practice - 10 Verbs</h1>
    </div>

    <div class="" style="height: 50vh">
        <div class="" style="margin-top: 30%">

            @* QUIZ *@
            <form method="post" >
                <div class="card shadow-sm mt-2 mx-auto" style="width: 80%">
                <div class="card-body">
                    @if (Model.QuestionsAnswered < 10) {
                        @*Quiz*@
                        <div class="">
                            <div class="col-12">
                                @if (Model.QuestionWords != null)
                                {
                                    <h4 class="card-title mb-3">
                                        @(
                                         (Model.QuestionsAnswered + 1)
                                         )/@Model.QuestionWords.Count
                                    </h4>
                                    <h2 class="card-title mb-3">
                                        @*Choose question language*@
                                        @if (num == 0)
                                        {
                                            @Model.QuestionWords[Model.QuestionsAnswered].ToEnglish
                                        }
                                        else
                                        {
                                            @Model.QuestionWords[Model.QuestionsAnswered].ToSpanish
                                        }
                                    </h2>
                                }
                                else
                                {
                                    <h5 class="card-title mb-3">Error loading words</h5>
                                }
                            </div>
                        </div>
                        
                        <input asp-for="Answer" autofocus class="form-control" placeholder="Type your answer here" value="@Model.QuestionWords[Model.QuestionsAnswered].ToSpanish.ToString()" />


                    }

                    @*Check if the person finished the test*@
                    @if (Model.QuestionsAnswered >= 10)
                    {
                        <div class="text-center m-4">
                            <div class="">
                                <h3>
                                    You've finished the quiz!
                                </h3>
                                <p class="text-muted">
                                    @Model.QuestionsAnsweredCorrect correct out of @Model.QuestionWords.Count
                                </p>
                                
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mt-5">
                            <div class="col-12">
                                <p class="text-muted">
                                    @Model.QuestionsAnsweredCorrect correct out of @Model.QuestionWords.Count
                                </p>
                            </div>
                        </div>
                    }

                </div>
                </div>
                @*Submit Quiz Answer*@
                @if (Model.QuestionsAnswered >= 10)
                {
                    <div class="mx-auto" style="width:max-content">
                        <form method="post" asp-page-handler="Results" >
                            <input type="hidden" asp-for="Answer" class="form-control" value="Complete" />
                            <button type="submit" value="Submit" class="btn-lg btn-primary m-1">
                                New Quiz
                            </button>
                            <a class="btn-lg nav-link link-light btn-primary m-1" asp-area="" asp-page="/Practice/index">Practice</a>
                        </form>
                    </div>
                }
                else
                {
                    <div class="m-5" style="">
                        <div class="">
                            <div class="">
                                <button type="submit" value="Submit" class="btn btn-primary btn-lg w-100" style="height: 60px">
                                    <i class="fas fa-chevron-right">Continue</i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </form>

        </div>
    </div>
    <br />
    <br />
    <br />
    <code class="debug-section">
        <h3 class="p-2 text-center border-top">Cheat Sheet</h3>
        <div class="overflow-hidden flex-container justify-content-center" style="flex-direction: row; flex-wrap: wrap;">
            @for (int i = 0; i < Model.QuestionWords.Count; i++)
            {
                var word = Model.QuestionWords[i];

                <div class="m-1" >
                    <div class="card" style="width: 150px">
                        @if(Model.QuestionsAnswered == i)
                        {
                            <div class="card-body bg-success bg-opacity-25">
                                <p>@(i+1).</p>
                                <h5 class="card-title text-dark text-capitalize">@word.ToEnglish</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@word.ToSpanish</h6>
                            </div>
                        }
                        else
                        {
                            <div class="card-body">
                                <p>@(i+1).</p>
                                <h5 class="card-title text-dark text-capitalize">@word.ToEnglish</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@word.ToSpanish</h6>
                            </div>
                        }

                    </div>
                </div>
            }
        </div>
    </code>
</section>